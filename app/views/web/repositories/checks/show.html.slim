- provide :page_title, t('.title')

h2 = t('.check_title', id: @check.id)

p = l(@check.created_at, format: :long)

p = t('.status', state: @check.aasm.human_state)

p = t('.check_passed', check_passed: @check.passed_text)

p = t('.issues', count: @check.errors_count)

.d-flex
  = link_to t('back'), :back, class: 'btn btn-outline-primary'

hr

table.table.table-striped.table-hover.mb-5
    thead
      tr
        th{ scope = 'col' } = t('.message')
        th{ scope = 'col' } = t('.rule')
        th{ scope = 'col' } = t('.line_column')
    tbody
      - error_path = nil
      - @errors.each do |error|
        - unless error_path == error.file_path
          tr
            td = link_to error.file_path, normalize_file_path(@check.repository)
          - error_path = error.file_path
        tr
          td = error.message
          td = error.rule
          td = error.line_column
